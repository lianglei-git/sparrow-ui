{
  "rootDir": ".",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "sparrow-ui/*": ["packages/design/components/*"],
      "sparrow-ui/es/*": ["packages/design/components/*"],
      "*": ["packages/design/components/*"],
      "_utils/*": ["packages/design/components/_utils/*"]
    },
    "strict": false,
    "strictNullChecks": false,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib", "es"]
}
