{
  "rootDir": ".",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "sparrow-ui/*": ["components/*"],
      "sparrow-ui/es/*": ["components/*"],
      "*": ["components/*"]
    },
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib", "es"]
}
